        ],
        'quotes', [
/*            "/\"([^\"\\\\\n]*(\\\\.[^\"\\\\\n]*)*)\"/", */
            "/'([^'\\\\\n]*(\\\\.[^'\\\\\n]*)*)'/",     /* single-quoted strings */
